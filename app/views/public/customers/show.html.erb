<div class="container">
  <div class="row justify-content-center">
		<div class="col-md-6">
		  <h2 class="text-center mt-2" style="font-family: HiraMinPro-W6;">マイページ</h2>
		  <div>
		    <strong style="font-family: HiraMinPro-W6;">登録情報</strong>
		  <div>
		    <%= link_to " 編集する", edit_public_customers_path, class: "btn btn-sm btn-success" %>
		  </div>
		  </div>
		  <table class="company">
		  	<tbody>
		  	　<tr>
		  		  <td class="info">氏名</td>
		  		　<td class="text-left"><%= @customer.full_name %></td>
		  	　</tr>
		  	  <tr>
		  	  	<td class="info">カナ</td>
		  	  	<td class="text-left"><%= @customer.full_name_kana %></td>
		  	  </tr>
		  	  <tr>
		  	  	<td class="info">郵便番号</td>
		  	  	<td class="text-left"><%= @customer.postal_code %></td>
		  	  </tr>
		  	  <tr>
		  	  	<td class="info">住所</td>
		  	  	<td class="text-left"><%= @customer.address %></td>
		  	  </tr>
		  	  <tr>
		  	  	<td class="info">電話番号</td>
		  	  	<td class="text-left"><%= @customer.phone_number %></td>
		  	  </tr>
		  	  <tr>
		  	  	<td class="info">メールアドレス</td>
		  	  	<td class="text-left"><%= @customer.email %></td>
		  	  </tr>
		  	</tbody>
		  </table>
		  <div class="mt-2">
		  	<strong style="font-family: HiraMinPro-W6;">配送先</strong>
		  	<div class="ml-3">
		  		<%= link_to " 一覧を見る", public_addresses_path, class: "btn btn-sm btn-primary mb-3 text-light" %><br>
		  	</div>
		  	<strong style="font-family: HiraMinPro-W6;">注文履歴</strong>
		  	<div>
		  		<%= link_to " 一覧を見る", public_orders_path, class: "btn btn-sm btn-primary text-light" %>
		    </div>
		  </div>
		</div>
  </div>
</div>
