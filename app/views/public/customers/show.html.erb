<div class="container my-5">
  <div class="row">
	<div class="col-6">
	  <h2>マイページ</h2>
	  <div>
	    <strong class="font-weight-bold">登録情報</strong>
	    <%= link_to " 編集する", edit_public_customer_path, class: "btn btn-sm btn-success" %>
	  </div>
	  <table class="table table-bordered table-hover" >
	  	<tbody>
	  	　<tr>
	  		<td class="info">氏名</td>
	  		<td class="text-left"><%= @customer.full_name %></td>
	  	　</tr>
	  	  <tr>
	  	  	<td class="info">カナ</td>
	  	  	<td class="text-left"><%= @customer.first_name_kana %></td>
	  	  </tr>
	  	  <tr>
	  	  	<td class="info">郵便番号</td>
	  	  	<td class="text-left"><%= @customer.postal_code %></td>
	  	  </tr>
	  	  <tr>
	  	  	<td class="info">住所</td>
	  	  	<td class="text-left"><%= @customer.address %></td>
	  	  </tr>
	  	  <tr>
	  	  	<td class="info">電話番号</td>
	  	  	<td class="text-left"><%= @customer.phone_number %></td>
	  	  </tr>
	  	  <tr>
	  	  	<td class="info">メールアドレス</td>
	  	  	<td class="text-left"><%= @customer.email %></td>
	  	  </tr>
	  	</tbody>
	  </table>
	  <div>
	  	<strong>配送先</strong>
	  	  <%= link_to " 一覧を見る", public_addresses_path, class: "btn btn-sm btn-info mb-3" %><br>
	  	<strong>注文履歴</strong>
	  	  <%= link_to " 一覧を見る", public_orders_path, class: "btn btn-sm btn-info" %>
	  </div>
	</div>
  </div>
</div>
