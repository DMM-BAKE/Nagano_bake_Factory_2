<div class="constainer">
  <div class="row">
    <div class="col-7">

      <h3>配送先登録/一覧</h3>

      <%= form_with model: @address, :url => {:controller => "public/addresses"} do |f| %>
      <div>
        <%= f.label :"郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code %>
      </div>

      <div>
        <%= f.label :"住所" %>
        <%= f.text_field :address %>
      </div>

      <div>
        <%= f.label :"宛名" %>
        <%= f.text_field :name %>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
      <% end %>

      <% if @address.present? %>
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td class="text-left">
                <%= address.postal_code %>
              </td>
              <td class="text-left">
                <%= address.address %>
              </td>
              <td class="text-left">
                <%= address.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_public_address_path(address), class: "glyphicon glyphicon-pencil btn-sm btn-primary" %>
              </td>
              <td>
                <%= link_to "削除する",public_address_path(address), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "glyphicon glyphicon-pencil btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>

