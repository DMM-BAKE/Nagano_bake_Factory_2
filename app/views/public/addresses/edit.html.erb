<div class="container">
  <div class="row justify-content-center" >
    <div class="col-md-6">
     <div class="text-danger">
       <%= render 'layouts/errors', obj: @address %>
      </div>
      <h3 class="text-center mt-2" style="font-family: HiraMinPro-W6;">
        配送先編集
      </h3>

      <%= form_with model: @address, url: public_address_path, method: :patch, local:true do |f| %>
      <div class="row form-group mt-5">
        <%= f.label :"郵便番号(ハイフンなし)", class:"col-md-4 col-form-label text-md-right fw-bold" %>
      <div class="col-md-6 px-md-0">
        <%= f.text_field :postal_code, placeholder: "1234567", class:"form-control" %>
      </div>
      </div>

       <div class="form-group row mt-3">
        <%= f.label :"住所", class:"col-md-4 col-form-label text-md-right fw-bold" %>
      <div class="col-md-6 px-md-0">
        <%= f.text_field :address, placeholder: "東京都渋谷区宇田川町1-1", class:"form-control" %>
      </div>
      </div>

      <div class="form-group row mt-3">
        <%= f.label :"宛名", class:"col-md-4 col-form-label text-md-right fw-bold" %>
      <div class="col-md-6 px-md-0">
        <%= f.text_field :name, placeholder: "宛名を入力してください", class: "form-control" %>
      </div>
      <div class="col-2 text-align: right; submit">
        <%= f.submit "変更内容を更新", class: "glyphicon glyphicon-pencil btn-md-btn btn-success" %>
      </div>
      </div>

      <div class="mt-3">
        <%= link_to "配送先一覧画面", public_addresses_path, class: "btn btn-sm btn-primary mb-3 text-light" %>
      </div>
      <% end %>
    </div>
  </div>
</div>


