<div class="container my-5">
  <div class="row">
    <div class="col">

      <h3>配送先編集</h3>

      <%= form_with model: @address, url: public_address_path, method: :patch, local:true do |f| %>
      <div>
        <%= f.label :"郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code %>
      </div>

      <div>
        <%= f.label :"住所" %>
        <%= f.text_field :address %>
      </div>

      <div>
        <%= f.label :"宛名" %>
        <%= f.text_field :name %>
        <%= f.submit "変更内容を保存", class: "glyphicon glyphicon-pencil btn-smbtn btn-success" %>
      </div>
      <div class="mt-3">
        <%= link_to "配送先一覧画面", public_addresses_path, class: "btn-info" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
