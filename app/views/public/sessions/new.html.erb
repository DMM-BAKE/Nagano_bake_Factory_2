<div class="container">
  <div class="row">
    <div class="col">
      
    </div>
  </div>
  <div class="box1">
  <div class="box-inner">
    <h3>ログイン</h3>
    <%= render "layouts/errors", obj: resource %>
    <h6 class="my-3">会員の方はこちらからログイン</h6>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="box-email">
      <%= f.label :"メールアドレス" %>
      <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", class:"form-inline" %>
    </div>
    <div class="my-2 box-password">
      <%= f.label :"パスワード" %>
      <%= f.password_field :password, class:"form-inline" %>
    </div>
    <div>
      <%= f.submit "ログイン",class: "btn btn-md btn-primary"%>
    </div>
    <% end %>
    <div>
      <h6 class="mt-2">会員登録がお済みでない⽅</h6>
      <p><%= link_to "こちら", new_customer_registration_path %> から新規登録を行ってください。</p>
    </div>
  </div>
</div>
</div>

