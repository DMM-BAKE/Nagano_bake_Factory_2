<h2>注文履歴詳細</h2>


<div>
  <h4>注文情報</h4>
  <table class="table">
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>〒<%= @order.postal_code %><br>
        <%= @order.address %><br>
        <%= @order.name %>
        </td>
    </tr>
      <tr>
        <th>支払い方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.order_status_i18n %></td>
      </tr>
  </table>
  <table class="table">
    請求情報
    <tr>
      <th>商品合計</th>
      <td><%= @order.total_payment -= @order.shipping_cost %></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @order.shipping_cost %></td>
    </tr>
    <th>ご請求金額</th>
    <td><%= @order.total_payment += @order.shipping_cost %></td>
  </table>
  </div>
  <div>
    <table class="table">
      <tr>
        <th>商品</th>
        <th>単価(税込み)</th>
        <th>個数</th>
        <th>小計</th>
      </tr>

      <% @order.order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.item.add_tax_price %></td>
        <td><%= order_detail.order_count %></td>
        <td><% subtotal = order_detail.order_count * order_detail.item.add_tax_price %><%= subtotal %> </td><% end %>
      </tr>
    </table>
  </div>




