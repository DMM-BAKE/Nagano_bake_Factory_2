<h1>注文情報確認</h1>
<div>
<table>
  <tr>
    <th>商品名</th>
    <th>単価(税込み)</th>
    <th>数量</th>
    <th>小計</th>
  </tr>

  <% @cart_items.each do |cart_item| %>
  <tr>
    <td><%= cart_item.item.name %></td>

    <td><%= cart_item.item.add_tax_price %></td>

    <td><%= cart_item.item_count %></td>

    <td><%= cart_item.subtotal %></td>
    <td><%= @order_price += cart_item.subtotal %></td>
  </tr>
  <% end %>


  </table>
  <table>
    <tr>
      <th>送料</th>
      <td><%= shipping_cost = 800 %></td>

    </tr>
    <tr>
      <th>合計金額</th>
      <td><%= @order_price %></td>

    </tr>
    <tr>
      <th>請求額</th>
      <td><%= @order_price += shipping_cost %></td>

    </tr>
  </table>

  </div>
  <%= form_with model:@order, url: public_orders_path(@order), method: :post, local: true do |f| %>
    <%= f.hidden_field :customer_id, :value => current_customer.id %>
    <%= f.hidden_field :total_payment, :value => @order_price += shipping_cost %>
    <%= f.hidden_field :shipping_cost, :value => shipping_cost %>
  <div>
    <span>支払い方法</span>

    <%= @order.payment_method_i18n %>
    <%= f.hidden_field :payment_method, :value => @order.payment_method %>

  </div>
  <div>
    <span>お届け先</span>
    〒<%= @order.postal_code %>
    <%= f.hidden_field :postal_code, :value => @order.postal_code %>
    <%= @order.address %>
    <%= f.hidden_field :address, :value => @order.address %>
    <%= @order.name %>
    <%= f.hidden_field :name, :value => @order.name %>

  </div>

<%= f.submit '注文を確定する'%>
<% end %>



