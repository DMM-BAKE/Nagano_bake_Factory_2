<h2>注文情報入力</h2>
<%= form_with model: @order, url: public_orders_confirm_path, local:true do |f| %>

<p>支払い方法</p>
  <di>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
  </di>
  <div>
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
  </div>
<p>お届け先</p>
  <div>
    <%= f.radio_button :address_options, Order.address_options.key(0), checked: "checked" %>
    <%= f.label :"ご自身の住所　〒#{current_customer.postal_code} #{current_customer.address}", class: "payment_method_label" %>
  </div>
  <div>
    <%= f.radio_button :address_options, Order.address_options.key(1) %>
    <%= f.label :"登録住所から選択" %>
    <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
  </div>
  <div>
  <%= f.radio_button :address_options, Order.address_options.key(2) %>
  <%= f.label :"新規お届け先入力" %>
  </div>
  <div>
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code %>
  </div>

  <div>
    <%= f.label :"住所" %>
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :"宛名" %>
    <%= f.text_field :name %>
    <%= f.submit "新規登録", class: "glyphicon glyphicon-pencil btn-smbtn btn-success" %>
  </div>
    <%= f.submit "確認画面へ進む" , class:"btn btn-primary" %>
  <% end %>





