<div class='container px-5 px-sm-0'>

  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <div class="item-image">
        <%= image_tag @item.get_image(100, 100) %>
      </div>
      <div class="item-text">
        <h2>
          <%= @item.name %>
        </h2>
        <p><%= @item.description %></p>
        <p>¥<%= @item.add_tax_price.to_s(:delimited) %>(税込価格)</p>

          <%= render 'public/cart_items/form', cart_item: @cart_item, item: @item %>
      </div>
    </div>
  </div>
</div>