<div class="container">
  <div class="row">
    <div class="col">
      <h2>注文商品一覧</h2>
      <div class=>
        <table class="table">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tboby>
            <% @orders.each do |order| %>
            <tr>
              <td>
              <%= link_to admin_order_path(order) do %>
                <%= order.created_at.strftime('%Y/%m/%d') %>
              <% end %>
              </td>
              <td><%= order.customer.full_name %></td>
              <td><%= order.order_details.count %></td>
              <td><%= order.order_status %></td>
            </tr>
            <% end %>
          </tboby>
        </table>
      </div>
    </div>
  </div>
  <div class=class="text-center"><%= paginate(@orders) %></div>
</div>
