<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <span class="p-2 bg-light h4">会員一覧</span>
      <br>
      <br>
      <table class="table">
        <tr>
          <th class="table-active">会員ID</th>
          <th class="table-active">氏名</th>
          <th class="table-active">メールアドレス</th>
          <th class="table-active">ステータス</th>
        </tr>
        <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <%= link_to customer.full_name, admin_customer_path(customer), class: "text-dark" %>
            </td>
            <td>
              <%= customer.email %>
            </td>
            <% if customer.is_deleted == true %>
              <td class="text-danger fw-bold">退会済</td>
            <% else %>
              <td class="text-success fw-bold">有効</td>
            <% end %>
          </tr>
        <% end %>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>