<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <span class="p-2 bg-light h4">管理者ログイン</span>
      <div class="text-danger">
        <%= flash[:alert] %>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group row mt-5">
          <%= f.label :email, "メールアドレス", class: "col-md-4 col-form-label text-md-right" %>
          <div class="col-md-8 px-md-0">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "naganocake@example.com",  class: "form-control" %>
          </div>
        </div>
        <div class="form-group row mt-5">
          <%= f.label :password, "パスワード", class: "col-md-4 col-form-label text-md-right" %>
          <div class="col-md-8 px-md-0">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>

        <div class="form-group text-center mt-5">
          <%= f.submit "ログイン", class:"btn btn-primary btn-lg" %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
