<div class="text-danger">
  <%= render 'layouts/errors', obj: @genre %>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-5">
      <span class="bg-light", style="font-size: 21px;">ジャンル一覧・追加</span>
      <br>
      <br>
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <p class=class="mb-5">ジャンル名　　　　<%= f.text_field :name %>　　　　<%= f.submit '新規登録', class: "btn btn-success" %></p>
      <% end %>
    </div>
  </div>
  <br>
  <div class="row">
  　<div class="col-lg-4">
      <table class="table">
        <thead>
          <tr>
            <th class="table-active text-center">ジャンル</th>
            <th class="table-active"></th>
          <tr/>
        </thead>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td class="text-center"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>