<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8 text-center">
      <div class="text-danger">
        <%= render 'layouts/errors', obj: @genre %>
      </div>
      <span class="px-2 bg-light h4">ジャンル編集</span>
      <br>
      <br>
      <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
        <p>　　<b>ジャンル名</b>　　　<%= f.text_field :name %>　　　<%= f.submit '変更を保存', class: "btn btn-success" %></p>
      <% end %>
    </div>
  </div>
</div>