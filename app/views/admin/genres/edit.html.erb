<div class="text-danger">
  <%= render 'layouts/errors', obj: @genre %>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-5">
      <span class="bg-light", style="font-size: 21px;">ジャンル編集</span>
      <br>
      <br>
      <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
        <p class=class="mb-5">ジャンル名　　　　<%= f.text_field :name %>　　　　<%= f.submit '変更を保存', class: "btn btn-success" %></p>
      <% end %>
    </div>
  </div>
</div>