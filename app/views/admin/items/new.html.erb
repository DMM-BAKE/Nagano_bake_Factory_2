<div class=></div>
    <%= render 'layouts/errors', obj: @item %>
  <h2>商品新規登録</h2>
  <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
    <div class="form-group">
     <%= f.label :"商品画像" %>
     <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="form-group">
      <%= f.label :"商品名" %>
      <%= f.text_field :name, placeholder: "商品名" %>
    </div>
    <div class="form-group">
      <%= f.label :"商品説明" %>
      <%= f.text_area :description, placeholder: "ここに説明文を記述します" %>
    <div class="form-group">
      <%= f.label :"ジャンル" %>
      <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --") %>
    </div>
    <div class="form-group">
      <%= f.label :"税抜価格" %>
      <%= f.text_field :price, placeholder: "1000" %>円
    </div>
    <div class="form-group">
      <%= f.label :"販売ステータス" %>
      <label><%= f.radio_button :item_status, true, checked: true %>販売中</label>
      <label><%= f.radio_button :item_status, false %>販売停止中</label>
    </div>
    <div class="form-group">
     <%= f.submit "新規登録" %>
    </div>
  <% end %>
</div>
