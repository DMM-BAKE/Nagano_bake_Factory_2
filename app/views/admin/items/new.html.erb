  <div class="text-danger">
   <%= render 'layouts/errors', obj: @item %>
  </div>
  <div class="container">
   <div class="row justify-content-center">
     <div class="col-md-8">
      <span class="bg-light px-2 h4">商品新規登録</span>
      <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
        <div class="form-group row mt-5">
         <%= f.label :"商品画像", class:"col-md-4 col-form-label text-md-right fw-bold" %>
         <div class="col-md-6 px-md-0">
           <%= f.file_field :image, accept: "image/*", class:"form-control-file" %>
          </div>
        </div>
        <div class="form-group row mt-3">
          <%= f.label :"商品名", class:"col-md-4 col-form-label text-md-righ fw-bold" %>
          <div class="col-md-6 px-md-0">
            <%= f.text_field :name, placeholder: "商品名", class:"form-control" %>
          </div>
        </div>
        <div class="form-group row mt-3">
          <%= f.label :"商品説明", class:"col-md-4 col-form-label text-md-righ fw-bold" %>
          <div class="col-md-6 px-md-0">
            <%= f.text_area :description, placeholder: "ここに説明文を記述します", class:"form-control" %>
          </div>
        </div>
        <div class="form-group row mt-3">
          <%= f.label :"ジャンル", class:"col-md-4 col-form-label text-md-righ fw-bold" %>
          <div class="col-md-6 px-md-0">
            <%= f.collection_select(:genre_id, Genre.all, :id, :name, {prompt: "-- 選択してください --"}, {class:"form-select"}) %>
          </div>
        </div>
        <div class="form-group row mt-3">
          <%= f.label :"税抜価格", class:"col-md-4 col-form-label text-md-righ fw-bold" %>
          <div class="col-md-6 px-md-0">
            <%= f.text_field :price, placeholder: "1000", class:"form-control" %>
          </div>
          <p class="col my-2">円</p>
        </div>
        <div class="form-group row mt-3">
          <%= f.label :"販売ステータス", class:"col-md-4 col-form-label text-md-righ fw-bold" %>
          <div class="col-md-8 px-md-0">
            <div class="form-check form-check-inline">
              <label><%= f.radio_button :item_status, true, checked: true %>販売中</label>
            </div>
            <div class="form-check form-check-inline">
              <label><%= f.radio_button :item_status, false %>販売停止中</label>
            </div>
          </div>
        </div>
        <div class="form-group text-center mt-3">
         <%= f.submit "新規登録", class:"btn btn-success btn-lg" %>
        </div>
      <% end %>
    </div>
   </div>
 </div>
