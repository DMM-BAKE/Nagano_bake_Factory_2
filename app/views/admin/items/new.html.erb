 <%= render 'layouts/errors', obj: @item %>
 <div class="container">
   <div class="row">
     <div class="col-md-6 offset-md-3">
      <h3>商品新規登録</h3>
      <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
        <div class="form-group">
         <%= f.label :"商品画像", class:"col-sm-2 col-form-label" %>
         <%= f.file_field :image, accept: "image/*", class:"form-control-file" %>
        </div>
        <div class="form-group">
          <%= f.label :"商品名", class:"col-sm-2 col-form-label" %>
          <%= f.text_field :name, placeholder: "商品名", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :"商品説明", class:"col-sm-2 col-form-label" %>
          <%= f.text_area :description, placeholder: "ここに説明文を記述します", row: 7, class: "form-control" %>
        <div class="form-group">
          <%= f.label :"ジャンル", class:"col-sm-2 col-form-label" %>
          <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --") %>
        </div>
        <div class="form-group">
          <%= f.label :"税抜価格", class:"col-sm-2 col-form-label" %>
          <%= f.text_field :price, placeholder: "1000", class: "form-control" %>円
        </div>
        <div class="form-group">
          <%= f.label :"販売ステータス", class:"col-sm-2 col-form-label" %>
          <label><%= f.radio_button :item_status, true, checked: true %>販売中</label>
          <label><%= f.radio_button :item_status, false %>販売停止中</label>
        </div>
        <div class="form-group text-center">
         <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
   </div>
 </div>
