<div class=>
  <h2>商品詳細</h2>
    <div><%= image_tag @item.get_image(100, 100) %></div>
    <div>
      <p>商品名<%= @item.name %></p>
    </div>
    <div>
      <p>商品説明<%= @item.description %></p>
    </div>
    <div>
      <p>ジャンル<%= @item.genre.name %></p>
    </div>
    <div>
      <p>
        税込価格<%= @item.add_tax_price.to_s(:delimited) %>
        (<%= @item.price.to_s(:delimited) %>)円<br>
        (税抜価格)
      </p>
    </div>
    <div>
      <p>
        販売ステータス
        <% if @item.item_status == true %>
          販売中
        <% else %>
          販売停止中
        <% end %>
      </p>
    </div>
    <div>
      <%= link_to "編集する", edit_admin_item_path(@item) %>
    </div>
</div>
