<%= render 'layouts/errors', obj: @item %>
<div class="container">
   <div class="row justify-content-center">
     <div class="col-md-8">
      <h2>商品編集</h2>
      <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch, local:true do |f| %>
        <div class="form-group row mt-3">
          <%= f.label :"商品画像", class:"col-md-4 col-form-label text-md-right" %>
          <div class="col-md-8 px-md-0">
            <%= f.file_field :image, accept: "image/*", class:"form-control-file" %>
          </div>
        </div>
        <div class="form-group row mt-3">
          <%= f.label :"商品名", class:"col-md-4 col-form-label text-md-right" %>
          <div class="col-md-8 px-md-0">
            <%= f.text_field :name, class:"form-control" %>
          </div>
        </div>
        <div class="form-group row mt-3">
          <%= f.label :"商品説明", class:"col-md-4 col-form-label text-md-right" %>
          <div class="col-md-8 px-md-0">
            <%= f.text_area :description, class:"form-control" %>
          </div>
        </div>
        <div class="form-group row mt-3">
          <%= f.label :"ジャンル", class:"col-md-4 col-form-label text-md-right" %>
          <div class="col-md-8 px-md-0">
            <%= f.collection_select(:genre_id, Genre.all, :id, :name, {prompt: @item.genre.name}, {class:"form-select"}) %>
          </div>
        </div>
        <div class="form-group row mt-3">
          <%= f.label :"税抜価格", class:"col-md-4 col-form-label text-md-right" %>
          <div class="col-md-8 px-md-0">
            <%= f.text_field :price, class:"form-control" %>円
          </div>
        </div>
        <div class="form-group row mt-3">
          <%= f.label :"販売ステータス", class:"col-md-4 col-form-label text-md-right" %>
          <div class="col-md-8 px-md-0">
            <div class="form-check form-check-inline">
              <label><%= f.radio_button :item_status, true, checked: @item.item_status == true %>販売中</label>
            </div>
            <div class="form-check form-check-inline">
              <label><%= f.radio_button :item_status, false, checked: @item.item_status == false %>販売停止中</label>
            </div>
          </div>
        </div>
        <div class="form-group text-center mt-3">
          <%= f.submit '変更を保存', class:"btn btn-success btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>