<%= render 'layouts/errors', obj: @item %>
<div>
  <h2>商品編集</h2>
    <div>
      <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch, local:true do |f| %>
      <div class="form-group">
        <%= f.label :"商品画像" %>
        <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <%= f.label :"商品名" %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :"商品説明" %>
        <%= f.text_area :description %>
      </div>
      <div class="form-group">
        <%= f.label :"ジャンル" %>
        <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: @item.genre.name) %>
      </div>
      <div class="form-group">
        <%= f.label :"税抜価格" %>
        <%= f.text_field :price %>円
      </div>
      <div class="form-group">
        <%= f.label :"販売ステータス" %>
        <label><%= f.radio_button :item_status, true, checked: @item.item_status == true %>販売中</label>
        <label><%= f.radio_button :item_status, false, checked: @item.item_status == false %>販売停止中</label>
      </div>
      <div class="form-group">
        <%= f.submit '変更を保存' %>
      </div>
      <% end %>
  </div>
</div>